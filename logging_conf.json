{
    "version" : 1,
    "loggers" : {
        "ScrapingLogger" : {
            "level" : "DEBUG",
            "handlers" : ["fileHandlerScraping","consoleHandler"],
            "qualname" : "ScrapingLogger",
            "propagate" : 0
        },
        "AnalysingLogger" : {
            "level" : "DEBUG",
            "handlers" : ["fileHandlerAnalysing","consoleHandler"],
            "qualname" : "AnalysingLogger",
            "propagate" : 0
        }
    },
    "handlers" : {
        "consoleHandler" : {
            "class" : "logging.StreamHandler",
            "level" : "DEBUG",
            "formatter": "consoleFormatter"
        },
        "fileHandlerScraping" : {
            "class" : "logging.FileHandler",
            "level" : "INFO",
            "formatter" : "consoleFormatter",
            "filename" : "./scraping.logs"
        },
        "fileHandlerAnalysing" : {
            "class" : "logging.FileHandler",
            "level" : "INFO",
            "formatter" : "consoleFormatter",
            "filename" : "./analysing.logs"
        }
    },
    "formatters" : {
        "consoleFormatter" : {
            "format" : "%(asctime)s | %(levelname)-8s | %(filename)s | %(message)s",
            "datefmt" : "%Y-%m-%d %H:%M:%S"
        }
    }
}